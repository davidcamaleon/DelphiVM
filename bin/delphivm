#!/usr/bin/env ruby

begin
  $LOAD_PATH.unshift File.join(File.dirname($0), '..', 'lib')
  if ARGV[0] == 'backtrace'
    ::BACKTRACE = true
    ARGV.shift
  end

  $0 =  ENV["OCRA_EXECUTABLE"] || __FILE__
  if defined? Ocra 
    ARGV << 'vendor:import' << '-c' #to see all requires when compiling
  end
 
  require 'DelphiVM'
  $thor_runner = true
  Delphivm::Runner.start(ARGV)

rescue Interrupt => e
  puts "\nQuitting..."
  puts e.backtrace.join("\n") if defined? ::BACKTRACE
  exit 1
rescue Exception => e
  puts e.message
  puts e.backtrace.join("\n") if defined? ::BACKTRACE
  exit 1
end
exit 0
